{
    "id": "406f4a5c-0823-4881-87cd-008b5aa90bc5",
    "name": "update-assembly-info",
    "friendlyName": "Update Assembly Info",
    "description": "Update assembly info",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Bool (by Sigma)",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "instanceNameFormat": "Update Assembly: $(assemblyInfoFiles)","groups": [
        {
            "name": "fileVersion",
            "displayName": "File Version",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "assemblyInfoFiles",
            "type": "filePath",
            "label": "Assembly Info",
            "defaultValue": "**\\AssemblyInfo.*",
            "required": true,
            "helpMarkDown": "Relative path from repo root of the assembly info file(s). Variables and  wildcards can be used. For example, <code>$(Build.SourcesDirectory)</code> or <code>\\*\\*\\AssemblyInfo.\\*</code> for all AssemblyInfo.* files in all sub folders."
        },
        {
            "name": "descriptionOption",
            "type": "pickList",
            "label": "Assembly Description",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "Do Not Update",
                "update": "Update"
            }
        },
        {
            "name": "description",
            "type": "string",
            "label": "",
            "defaultValue": "Build: $(Build.BuildNumber) - Commit: $(Build.SourceVersion)",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(Build.BuildNumber).",
            "visibleRule": "descriptionOption = update"
        },
        {
            "name": "configurationOption",
            "type": "pickList",
            "label": "Assembly Configuration",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "Do Not Update",
                "update": "Update"
            }
        },
        {
            "name": "configuration",
            "type": "string",
            "label": "",
            "defaultValue": "$(BuildConfiguration)",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(BuildConfiguration).",
            "visibleRule": "configurationOption = update"
        },
        {
            "name": "companyOption",
            "type": "pickList",
            "label": "Assembly Company",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "Do Not Update",
                "update": "Update"
            }
        },
        {
            "name": "company",
            "type": "string",
            "label": "",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Variables can be used.",
            "visibleRule": "companyOption = update"
        },
        {
            "name": "productOption",
            "type": "pickList",
            "label": "Assembly Product",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "Do Not Update",
                "update": "Update"
            }
        },
        {
            "name": "product",
            "type": "string",
            "label": "",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Variables can be used",
            "visibleRule": "productOption = update"
        },
        {
            "name": "copyrightOption",
            "type": "pickList",
            "label": "Assembly Copyright",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "Do Not Update",
                "update": "Update"
            }
        },
        {
            "name": "copyright",
            "type": "string",
            "label": "",
            "defaultValue": "Copyright © $(Company) $(Year)",
            "required": false,
            "helpMarkDown": "Variables can be used. The value provided for \"Company\" can be inserted using variable $(Company). The current year can be inserted using variable $(Year). Used togeather this could produce \"Copyright © YourCompanyName 2017\".",
            "visibleRule": "copyrightOption = update"
        },
        {
            "name": "fileVersionMajor",
            "type": "string",
            "label": "Major",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(Build.BuildId).",
            "groupName": "fileVersion"
        },
        {
            "name": "fileVersionMinor",
            "type": "string",
            "label": "Minor",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(Build.BuildId).",
            "groupName": "fileVersion"
        },
        {
            "name": "fileVersionBuild",
            "type": "string",
            "label": "Build",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(Build.BuildId).",
            "groupName": "fileVersion"
        },
        {
            "name": "fileVersionRevision",
            "type": "string",
            "label": "Revision",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(Build.BuildId).",
            "groupName": "fileVersion"
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\update.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}