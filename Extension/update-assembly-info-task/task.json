{
    "id": "406f4a5c-0823-4881-87cd-008b5aa90bc5",
    "name": "update-assembly-info",
    "friendlyName": "Update Assembly Info",
    "description": "Update assembly info",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Bool (by Sigma)",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "instanceNameFormat": "Update Assembly: $(assemblyInfoFiles)",
    "inputs": [
        {
            "name": "assemblyInfoFiles",
            "type": "filePath",
            "label": "Assembly Info",
            "defaultValue": "**\\AssemblyInfo.*",
            "required": true,
            "helpMarkDown": "Relative path from repo root of the assembly info file(s). Variables and  wildcards can be used. For example, <code>$(Build.SourcesDirectory)</code> or <code>\\*\\*\\AssemblyInfo.\\*</code> for all AssemblyInfo.* files in all sub folders."
        },
        {
            "name": "descriptionOption",
            "type": "pickList",
            "label": "Assembly Description",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "No Update",
                "update": "Update"
            }
        },
        {
            "name": "description",
            "type": "string",
            "label": "",
            "defaultValue": "Build: $(Build.BuildNumber) - Commit: $(Build.SourceVersion)",
            "required": false,
            "helpMarkDown": "Variables can be used, eg. $(Build.BuildNumber).",
            "visibleRule": "descriptionOption = update"
        },
        {
            "name": "configurationOption",
            "type": "pickList",
            "label": "Assembly Configuration",
            "defaultValue": "none",
            "required": false,
            "helpMarkDown": "",
            "options": {
                "none": "No Update",
                "update": "Update"
            }
        },
        {
            "name": "configuration",
            "type": "string",
            "label": "",
            "defaultValue": "$(BuildConfiguration)",
            "required": false,
            "helpMarkDown": "Configuration used during build. Variables can be used, eg. $(BuildConfiguration).",
            "visibleRule": "configurationOption = update"
        },
        {
            "name": "company",
            "type": "string",
            "label": "Assembly Company",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": ""
        },
        {
            "name": "product",
            "type": "string",
            "label": "Assembly Product",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": ""
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\update.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}